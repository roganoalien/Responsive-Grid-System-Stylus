/*
** Responsive Grid System of 3 | default margin of 1.6%
*/
.section
	clear both
	padding 0
	margin 0
.col
	display block
	float left
	margin 1% 0 1% 1.6%
	&:first-child
		margin-left 0
	@media all and (max-width: 480px)
		margin 1% 0 1% 0%	

.group:before,
.group:after
	content ""
	display table
.group:after
	clear both
.group
	zoom 1

/* Grid of Three */
.span_1_of_3
	width 32.26%
	@media all and (max-width: 480px)
		width 100%
.span_2_of_3
	width 66.13%
	@media all and (max-width: 480px)
		width 100%
.span_3_of_3
	width 100%
	@media all and (max-width: 480px)
		width 100%