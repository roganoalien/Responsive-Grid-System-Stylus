/*
** Responsive Grid System of 2 | default margin of 1.6%
*/
.section
	clear both
	padding 0
	margin 0
.col
	display block
	float left
	margin 1% 0 1% 1.6%
	&:first-child
		margin-left 0
	@media all and (max-width: 480px)
		margin 1% 0 1% 0%	

.group:before,
.group:after
	content ""
	display table
.group:after
	clear both
.group
	zoom 1
	
/* Grid of Two*/
.span_1_of_2
	width 49.2%
	@media all and (max-width: 480px)
		width 100%
.span_2_of_2
	width 100%
	@media all and (max-width: 480px)
		width 100%